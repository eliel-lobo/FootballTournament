<%- model_class = Standing -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:tournament_id) %>:</strong></dt>
  <dd><%= @standing.tournament_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:team_id) %>:</strong></dt>
  <dd><%= @standing.team_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:wins) %>:</strong></dt>
  <dd><%= @standing.wins %></dd>
  <dt><strong><%= model_class.human_attribute_name(:losses) %>:</strong></dt>
  <dd><%= @standing.losses %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ties) %>:</strong></dt>
  <dd><%= @standing.ties %></dd>
  <dt><strong><%= model_class.human_attribute_name(:points) %>:</strong></dt>
  <dd><%= @standing.points %></dd>
  <dt><strong><%= model_class.human_attribute_name(:scored_goals) %>:</strong></dt>
  <dd><%= @standing.scored_goals %></dd>
  <dt><strong><%= model_class.human_attribute_name(:conceded_goals) %>:</strong></dt>
  <dd><%= @standing.conceded_goals %></dd>
  <dt><strong><%= model_class.human_attribute_name(:goal_difference) %>:</strong></dt>
  <dd><%= @standing.goal_difference %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              standings_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_standing_path(@standing), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              standing_path(@standing),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
