<%- model_class = Game -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:home_team_id) %>:</strong></dt>
  <dd><%= @game.home_team_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:away_team_id) %>:</strong></dt>
  <dd><%= @game.away_team_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tournament_id) %>:</strong></dt>
  <dd><%= @game.tournament_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:home_score) %>:</strong></dt>
  <dd><%= @game.home_score %></dd>
  <dt><strong><%= model_class.human_attribute_name(:away_score) %>:</strong></dt>
  <dd><%= @game.away_score %></dd>
  <dt><strong><%= model_class.human_attribute_name(:result) %>:</strong></dt>
  <dd><%= @game.result %></dd>
  <dt><strong><%= model_class.human_attribute_name(:week) %>:</strong></dt>
  <dd><%= @game.week %></dd>
  <dt><strong><%= model_class.human_attribute_name(:round) %>:</strong></dt>
  <dd><%= @game.round %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              games_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_game_path(@game), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              game_path(@game),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
